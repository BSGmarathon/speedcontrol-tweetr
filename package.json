{
  "name": "speedcontrol-tweetr",
  "version": "1.2.1",
  "description": "Control Twitter right from your NodeCG dashboard!",
  "homepage": "https://github.com/nicnacnic/speedcontrol-tweetr",
  "author": "nicnacnic",
  "url": "https://nicnacnic.com",
  "license": "MIT",
  "scripts": {
    "build": "rollup --config"
  },
  "nodecg": {
    "bundleDependencies": {
      "nodecg-speedcontrol": "^2.4.0",
      "nodecg-components": "^1.0.0"
    },
    "compatibleRange": "^1.8.1",
    "assetCategories": [
      {
        "name": "media",
        "title": "Tweet Media",
        "allowedTypes": [
          "png",
          "jpg",
          "gif",
          "jpeg",
          "webp",
          "mp4"
        ]
      }
    ],
    "dashboardPanels": [
      {
        "name": "tweetr",
        "title": "Tweetr",
        "file": "tweetr/tweetr.html",
        "width": 3
      },
      {
        "name": "editTweet",
        "title": "",
        "width": 4,
        "file": "editTweet/editTweet.html",
        "dialog": true,
        "dialogButtons": [
          {
            "name": "save",
            "type": "confirm"
          },
          {
            "name": "cancel",
            "type": "dismiss"
          }
        ]
      },
      {
        "name": "settings",
        "title": "Tweetr Settings",
        "workspace": "Z - BSG Advanced",
        "file": "settings/settings.html",
        "width": 3
      }
    ]
  },
  "dependencies": {
    "papaparse": "^5.3.2",
    "twitter-api-v2": "^1.12.9"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^11.2.1",
    "rollup": "^2.45.2"
  }
}
